{
  "manifest_version": 2,

  "name": "HN Tree",
  "description": "Yet another Hacker News comment collapsing extension.",
  "version": "0.1.3",
  "permissions": [
    "activeTab"
  ],
  "page_action": {},

  "content_scripts": [
    {
      "matches": [
        "http://news.ycombinator.com/*",
        "https://news.ycombinator.com/*"
      ],
      "css": ["hn-tree.css"],
      "js": ["jquery-2.1.1.min.js", "content.js"],
      "run_at": "document_end"
    }
  ]
}