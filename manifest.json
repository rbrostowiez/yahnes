{
  "manifest_version": 2,

  "name": "HN Tree",
  "description": "Add functionality to 'fold' comments for Hacker News",
  "version": "0.1.1",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {"page": "background.html"},

  "content_scripts": [
    {
      "matches": [
        "http://news.ycombinator.com/item?*",
        "https://news.ycombinator.com/item?*"
      ],
      "js": ["jquery-2.1.1.min.js", "content.js"],
      "run_at": "document_end"
    }
  ]
}